# Simple To-Do List Application

todo_list = []  # Empty list to store tasks

def show_menu():
    print("\n===== ğŸ“ TO-DO LIST MENU =====")
    print("1. Add Task")
    print("2. View Tasks")
    print("3. Remove Task")
    print("4. Exit")

def add_task():
    task = input("Enter the task to add: ")
    todo_list.append(task)
    print(f"âœ… '{task}' has been added to your to-do list.")

def view_tasks():
    if not todo_list:
        print("ğŸ“­ Your to-do list is empty.")
    else:
        print("\nğŸ“‹ Your To-Do List:")
        for i, task in enumerate(todo_list, start=1):
            print(f"{i}. {task}")

def remove_task():
    view_tasks()
    if todo_list:
        try:
            task_no = int(input("Enter the task number to remove: "))
            if 1 <= task_no <= len(todo_list):
                removed = todo_list.pop(task_no - 1)
                print(f"âŒ '{removed}' has been removed from your to-do list.")
            else:
                print("âš ï¸ Invalid task number.")
        except ValueError:
            print("â— Please enter a valid number.")

# Main loop
while True:
    show_menu()
    choice = input("Enter your choice (1-4): ")

    if choice == '1':
        add_task()
    elif choice == '2':
        view_tasks()
    elif choice == '3':
        remove_task()
    elif choice == '4':
        print("ğŸ‘‹ Exiting To-Do List App. Goodbye!")
        break
    else:
        print("âŒ Invalid choice! Please select a number between 1 and 4.")
